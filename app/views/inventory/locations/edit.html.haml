#inventory_locations_edit
  .row
    .col-md-12
      .row
        .col-md-8
          %h4
            %i{class: 'fa fa-compass'}
            &nbsp;
            Edit Location
        .col-md-4
          .pull-right
            = link_to location_path(@location), :class => 'save btn btn-flat' do
              %i.fa.fa-save
              &nbsp;
              Save
            = link_to locations_path, :class => 'btn btn-flat white' do
              %i.fa.fa-ban
              &nbsp;
              Cancel
      %hr
    .col-md-12
      = render :partial => 'form', :locals => {:location => @location, :url => location_path(@location)}