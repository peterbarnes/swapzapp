= render :partial => 'shared/error', :locals => {:object => inventory}
= form_for inventory, :url => url, :html => {:class => 'form-horizontal'} do |f|
  %fieldset{:id => 'inventory'}
    %legend Inventory
    .form-group
      .col-lg-4
        = f.label :id, 'ID', :class => 'control-label'
      .col-lg-8
        = f.text_field :id, :disabled => true, :class => 'form-control'
    .form-group
      .col-lg-4
        = f.label :name, 'Name', :class => 'control-label'
      .col-lg-8
        = f.text_field :name, :class => 'form-control'
    .form-group
      .col-lg-4
        = f.label :description, 'Description', :class => 'control-label'
      .col-lg-8
        = f.text_area :description, :rows => 5, :class => 'form-control'
    .hidden
      = f.hidden_field :account_id
    %hr