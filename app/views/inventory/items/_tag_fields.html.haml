.panel.panel-default
  .panel-heading
    %h4.panel-title
      %a{:'data-toggle' => 'collapse', :'data-parent' => '#tag_accordian', :href => "##{f.object.object_id}"}= f.object.name ||= 'New Tag'
      = link_to '#', :class => 'remove_fields pull-right' do
        %i.fa.fa-trash-o
  %div{:id => "#{f.object.object_id}", :class => 'panel-collapse collapse'}
    .panel-body
      .form-group
        .col-lg-4
          = f.label :name, 'Name', :class => 'control-label'
        .col-lg-8
          = f.text_field :name, :class => 'form-control'
      .hidden
        = f.hidden_field :_destroy, :class => 'destroy'
        = f.hidden_field :id unless f.object.new_record?