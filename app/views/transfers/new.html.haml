#till_transfers_new
  .row
    .col-md-8
      %h4
        %i{class: 'fa fa-road'}
        &nbsp;
        = "Transfer from #{@till.name}"
    .col-md-4
      .pull-right
        = link_to till_transfer_path(@till), :class => 'save btn btn-flat' do
          %i.fa.fa-save
          &nbsp;
          Save
        = link_to tills_path, :class => 'btn btn-flat white' do
          %i.fa.fa-ban
          &nbsp;
          Cancel
  %hr
  .row
    .col-md-12
      = render :partial => 'form', :locals => {:transfer => @transfer, :url => till_transfer_path(@till)}