#timecards_new
  .row
    .col-md-8
      %h4
        %i{class: 'fa fa-clock-o'}
        &nbsp;
        New Timecard
    .col-md-4
      .pull-right
        = link_to timecards_path, :class => 'save btn btn-flat' do
          %i.fa.fa-save
          &nbsp;
          Save
        = link_to timecards_path, :class => 'btn btn-flat white' do
          %i.fa.fa-ban
          &nbsp;
          Cancel
  %hr
  .row
    .col-md-12
      = render :partial => 'form', :locals => {:timecard => @timecard, :url => timecards_path}