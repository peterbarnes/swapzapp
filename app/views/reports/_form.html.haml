= render :partial => 'shared/error', :locals => {:object => report}
= form_for report, :url => url, :html => {:class => 'form-horizontal'} do |f|
  %fieldset{:id => 'report'}
    %legend Report
    .form-group
      .col-lg-4
        = f.label :id, 'ID', :class => 'control-label'
      .col-lg-8
        = f.text_field :id, :disabled => true, :class => 'form-control'
    .form-group
      .col-lg-4
        = f.label :name, 'Name', :class => 'control-label'
      .col-lg-8
        = f.text_field :name, :class => 'form-control'
    .form-group
      .col-lg-4
        = f.label :job, 'Type', :class => 'control-label'
      .col-lg-8
        = f.select :job, options_from_collection_for_select(Job.all, :token, :name), {}, {:class => 'form-control'}
    .form-group
      .col-lg-4
        = f.label :from, 'From', :class => 'control-label'
      .col-lg-8
        = f.date_select :from, {}, :class => 'form-control date_select'
    .form-group
      .col-lg-4
        = f.label :to, 'To', :class => 'control-label'
      .col-lg-8
        = f.date_select :to, {}, :class => 'form-control date_select'
    .hidden
      = f.hidden_field :account_id
    %hr