= render :partial => 'shared/error', :locals => {:object => certificate}
= form_for certificate, :url => url, :html => {:class => 'form-horizontal'} do |f|
  %fieldset{:id => 'certificate'}
    %legend Gift Certificate
    .form-group
      .col-lg-4
        = f.label :id, 'ID', :class => 'control-label'
      .col-lg-8
        = f.text_field :id, :disabled => true, :class => 'form-control'
    .form-group
      .col-lg-4
        = f.label :sku, 'SKU', :class => 'control-label'
      .col-lg-8
        = f.text_field :sku, :class => 'form-control'
    .form-group
      .col-lg-4
        = f.label :amount, 'Amount', :class => 'control-label'
      .col-lg-8
        = f.currency_field :amount, :class => 'form-control'
    .form-group
      .col-lg-4
        = f.label :balance, 'Balance', :class => 'control-label'
      .col-lg-8
        = f.currency_field :balance, :class => 'form-control'
    .form-group
      .col-lg-4
        = f.label :active, 'Active', :class => 'control-label'
      .col-lg-8
        = f.check_box :active, :class => 'form-control'
    .hidden
      = f.hidden_field :account_id
    %hr
    