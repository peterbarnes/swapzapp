#operation_certificates_edit
  .row
    .col-md-8
      %h4
        %i{class: 'fa fa-gift'}
        &nbsp;
        Edit Gift Certificate
    .col-md-4
      .pull-right
        = link_to certificate_path(@certificate), :class => 'save btn btn-flat' do
          %i.fa.fa-save
          &nbsp;
          Save
        = link_to certificates_path, :class => 'btn btn-flat white' do
          %i.fa.fa-ban
          &nbsp;
          Cancel
  %hr
  .row
    .col-md-12
      = render :partial => 'form', :locals => {:certificate => @certificate, :url => certificate_path(@certificate)}