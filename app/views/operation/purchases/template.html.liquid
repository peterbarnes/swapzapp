<!DOCTYPE html>
<html>
  <head>
    <meta charset=utf-8 />
    <title>Purchase Receipt</title>
    <link rel="stylesheet" type="text/css" href="http://cdnjs.cloudflare.com/ajax/libs/normalize/2.1.3/normalize.min.css">
    <style type="text/css">
      body {
        margin: 0px;
        padding: 20px;
        font-size: 12px;
        font-family: Arial, sans-serif;
        line-height: 18px;
        color: black;
      }
      hr {
        clear: both;
        border: none;
        height: 2px;
        background-color: lightgray;
      }
      header {
        position: relative;
      }
      header h1 {
        position: absolute;
        top: 0;
        right: 0;
        text-align: right;
        text-transform: uppercase;
        color: lightgray;
      }
      table {
        width: 100%;
      }
      table thead {
        background-color: lightgray;
      }
      table th {
        padding: 4px;
        text-align: left;
      }
      table td {
        padding: 10px 0px 0px 0px;
        text-align: left;
        border-bottom: 1px solid lightgray;
        vertical-align: top;
      }
      table th.price, 
      table td.price,
      table th.subtotal, 
      table td.subtotal {
        text-align: right;
      }
      div#store {
        float: left;
      }
      div#info {
        float: right;
        margin-top: 40px;
        margin-bottom: 20px;
      }
      div#info dl dt {
        float: left;
        padding: 4px;
        font-weight: bold;
        clear: both;
      }
      div#info dl dd {
        float: right;
        padding: 4px;
        padding-left: 20px;
        margin: 0px;
        text-align: right;
      }
      div#summary dl {
        width: 100%;
        overflow: auto;
        clear: both;
      }
      div#summary dl dt {
        float: left;
        width: 90%;
        text-align: right;
        clear: right;
      }
      div#summary dl dd {
        float: right;
        width: 10%;
        margin: 0px;
        text-align: right;
      }
      p#credit, p#barcode {
        text-align: center;
      }
      p#legal {
        font-size: 10px;
      }
    </style>
    <!--[if IE]>
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
    <div id="certificate">
      <header>
        <h1>Purchases Receipt</h1>
        <div id="store">
          <h2>{{ purchase.account.title }}</h2>
          <address>
            {{ purchase.store.name }}
            <br>
            {{ purchase.store.address.first_line }}
            {% if purchase.store.address.second_line != "" %}
              <br>
              {{ purchase.store.address.second_line }}
            {% endif %}
            <br>
            {{ purchase.store.address.city }} {{ purchase.store.address.state }}, {{ purchase.store.address.zip }} {{ purchase.store.address.country }}
          </address>
          <p>{{purchase.store.description}}</p>
          {% for phone in purchase.store.phones %}
            <p><strong>{{ phone.formatted }}</strong></p>
          {% endfor %}
        </div>
        <div id="info">
          <dl>
            <dt>Date</dt>
            {% if purchase.complete %}
              <dd>{{ purchase.completed_at | date: "%c" }}</dd>
            {% else %}
              <dd>{{ purchase.created_at | date: "%c" }}</dd>
            {% endif %}
            <dt>SKU</dt>
            <dd>{{ purchase.sku }}</dd>
            <dt>Customer</dt>
            <dd>{{ purchase.customer.fullname }}</dd>
            <dt>Swapz</dt>
            <dd>{{ purchase.user.fullname }}</dd>
            <dt>Till</dt>
            <dd>{{ purchase.till.name }}</dd>
          </dl>
        </div>
      </header>
      <hr>
      <div id="lines">
        <table>
          <thead>
            <tr>
              <th>Quantity</th>
              <th>Description</th>
              <th class="price">Price</th>
              <th class="subtotal">Subtotal</th>
            </tr>
          </thead>
          <tbody>
            {% for line in purchase.lines %}
            <tr>
              <td>{{ line.quantity }}</td>
              <td>
                <strong>{{ line.title }}</strong>
                <br>
                {{ line.sku }}
                {% if line.note %}
                  <br>
                  {{ line.note }}
                {% endif %}
                {% if line.bullets %}
                  <ul>
                    {% for bullet in line.bullets %}
                      <li>{{ bullet }}</li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </td>
              <td class="price">{{ line.amount_cash | currency }} ({{ line.amount_credit | currency }})</td>
              <td class="subtotal"><strong>{{ line.subtotal_cash | currency }} ({{ line.subtotal_credit | currency }})</strong></td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      <div id="summary">
        <dl>
          <dt>Subtotal Cash:</dt>
          <dd>{{ purchase.subtotal_cash | currency }}</dd>
          <dt>Subtotal Credit:</dt>
          <dd>{{ purchase.subtotal_credit | currency }}</dd>
        </dl>
        <dl>
          <dt>Cash:</dt>
          <dd>{{ purchase.cash | currency }}</dd>
          <dt>Credit:</dt>
          <dd>{{ purchase.credit | currency }}</dd>
        </dl>
        <dl>
          {% if purchase.due > 0 %}
            <dt><strong>Change Due:</strong></dt>
            <dd><strong>{{ purchase.due | currency }}</strong></dd>
          {% else %}
            <dt><strong>Amount Due:</strong></dt>
            <dd><strong>{{ purchase.due | currency }}</strong></dd>
          {% endif %}
        </dl>
      </div>
      {% if purchase.customer %}
        <hr>
        <p id="credit">Credit Available: <strong>{{ purchase.customer.credit | currency }}</strong></p>
      {% endif %}
      <hr>
      <p id="barcode"><img src="{{purchase.sku | barcode}}" alt="Barcode" /></p>
      <hr>
      <p id="legal">{{ purchase.store.legal }}</p>
      <hr>
    </div>
  </body>
</html>