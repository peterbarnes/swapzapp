.panel.panel-default
  .panel-heading
    %h4.panel-title
      %a{:'data-toggle' => 'collapse', :'data-parent' => '#phone_accordian', :href => "##{f.object.object_id}"}= f.object.number ||= 'New Phone'
      = link_to '#', :class => 'remove_fields pull-right' do
        %i.fa.fa-trash-o
  %div{:id => "#{f.object.object_id}", :class => 'panel-collapse collapse'}
    .panel-body
      .form-group
        .col-lg-4
          = f.label :name, 'Name', :class => 'control-label'
        .col-lg-8
          = f.text_field :name, :class => 'form-control'
      .form-group
        .col-lg-4
          = f.label :number, 'Number', :class => 'control-label'
        .col-lg-8
          = f.telephone_field :number, :class => 'form-control'
      %div.hidden
        = f.hidden_field :_destroy
        = f.hidden_field :id unless f.object.new_record?