#account_users_edit
  .row
    .col-md-8
      %h4
        %i{class: 'fa fa-user'}
        &nbsp;
        Edit User
    .col-md-4
      .pull-right
        = link_to user_path(@user), :class => 'save btn btn-flat' do
          %i.fa.fa-save
          &nbsp;
          Save
        = link_to users_path, :class => 'btn btn-flat white' do
          %i.fa.fa-ban
          &nbsp;
          Cancel
  %hr
  .row
    .col-md-12
      = render :partial => 'form', :locals => {:user => @user, :url => user_path(@user)}