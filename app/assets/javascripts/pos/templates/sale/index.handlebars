<div class="content-wrapper">
  {{view SwapzPOS.FlashView modelBinding="flash"}}
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-8">
          <h4>
            <i class="fa fa-credit-card"></i>
            &nbsp;
            View Sale
          </h4>
        </div>
        <div class="col-md-4">
          <div class="pull-right">
            <button {{ action "edit"}} class="btn btn-flat">
              <i class="fa fa-pencil"></i>
              &nbsp;
              Edit
            </button>
            <button {{ action "print"}} class="btn btn-flat">
              <i class="fa fa-print"></i>
              &nbsp;
              Print
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-md-4">
      <dl>
        <dt>SKU</dt>
        <dd>
          <p>
            {{ sku }}
          </p>
        </dd>
        <dt>Completed</dt>
        <dd>
          <p>
            {{ boolean complete }}
          </p>
        </dd>
        <dt>Completed At</dt>
        <dd>
          {{ format-date completedAt 'LLL' }}
        </dd>
      </dl>
    </div>
    <div class="col-md-4">
      <dl>
        <dt>Store</dt>
        <dd>
          <p>
            {{ store.name }}
          </p>
        </dd>
        <dt>Till</dt>
        <dd>
          {{ till.name }}
        </dd>
      </dl>
    </div>
    <div class="col-md-4">
      <dl>
        <dt>Customer</dt>
        <dd>
          <p>
            {{ customer.fullname }}
          </p>
        </dd>
        <dt>User</dt>
        <dd>
          {{ user.fullname }}
        </dd>
      </dl>
    </div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-striped transaction">
        <thead>
          <tr>
            <th>Qty</th>
            <th>Title</th>
            <th>Price</th>
            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
          {{#each line in lines }}
            <tr>
              <td>
                {{ line.quantity }}
              </td>
              <td class="description">
                <strong>
                  {{ line.title }}
                </strong>
                <br/>
                {{ line.sku }}
                {{#if line.note }}
                  <br/>
                  {{ line.note }}
                {{/if}}
                {{#if line.bullets }}
                  <ul>
                    {{#each bullet in line.bullets }}
                      <li>
                        {{ bullet }}
                      </li>
                    {{/each}}
                  </ul>
                {{/if}}
                {{#if line.certificate }}
                  <br/>
                  Certificate: {{ line.certificate.sku }}
                {{/if}}
                {{#if line.item }}
                  <br/>
                  Item: {{ line.item.sku }}
                {{/if}}
                {{#if line.unit }}
                  <br/>
                  Unit: {{ line.unit.sku }}
                {{/if}}
              </td>
              <td>
                {{ currency line.amount }}
              </td>
              <td>
                {{ currency line.subtotal }}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <div class="well">
        <table class="table table-striped cart">
          <thead>
            <tr>
              <th>Qty</th>
              <th>Title</th>
              <th>Price</th>
              <th>Subtotal</th>
            </tr>
          </thead>
          <tbody>
            {{#each line in lines }}
              <tr class="cart-line">
                <td class="quantity">
                  {{ line.quantity }}
                </td>
                <td class="title">
                  {{ line.title }}
                </td>
                <td class="amount">
                  {{ currency line.amount }}
                </td>
                <td class="subtotal">
                  {{ currency line.subtotal }}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        <ul class="total clearfix">
          <li>
            <span>Subtotal:</span>
            <span>
              {{ currency subtotal }}
            </span>
          </li>
          <li>
            <span>Store Credit:</span>
            <span>
              {{ currency payment.storeCredit }}
            </span>
          </li>
          <li>
            <span>Subtotal (After Store Credit):</span>
            <span>
              {{ currency subtotalAfterStoreCredit }}
            </span>
          </li>
          <li>
            <span>
              Tax ({{ taxRate }}%):
            </span>
            <span>
              {{ currency tax  }}
            </span>
          </li>
          <li>
            <span>
              <strong>Total:</strong>
            </span>
            <span>
              <strong>
                {{ currency total }}
              </strong>
            </span>
          </li>
        </ul>
        <hr>
        <ul class="payment clearfix">
          {{#if payment.cash }}
            <li>
              <span>Cash:</span>
              <span>
                {{ currency payment.cash }}
              </span>
            </li>
          {{/if}}
          {{#if payment.credit }}
            <li>
              <span>Credit:</span>
              <span>
                {{ currency payment.credit }}
              </span>
            </li>
          {{/if}}
          {{#if payment.check }}
            <li>
              <span>Check:</span>
              <span>
                {{ currency payment.check }}
              </span>
            </li>
          {{/if}}
          {{#if payment.gift_card }}
            <li>
              <span>
                Gift Certificate ({{ certificate.sku }})
              </span>
              <span>
                {{ currency payment.giftCard }}
              </span>
            </li>
          {{/if}}
        </ul>
        <hr>
        <div class="clearfix">
          <p class="lead pull-left">
            <strong>
              {{ dueLabel }}
            </strong>
          </p>
          <p class="lead pull-right">
            <strong>
              {{ currency due }}
            </strong>
          </p>
        </div>
      </div>
    </div>
  </div>
  {{#if note }}
    <hr/>
    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Notes:</strong>
        </p>
        {{ note }}
      </div>
    </div>
  {{/if}}
</div>
