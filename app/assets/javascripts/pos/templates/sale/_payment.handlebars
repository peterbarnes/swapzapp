<div class="clearfix well well-sm">
  <span class="pull-left">{{ quantity }} items in cart:</span>
  <span class="pull-right">{{ currency subtotal }}</span>
</div>
{{#panel-group title="Store Credit" subtitle=payment.storeCredit}}
  {{#if customer}}
    <div class="btn-group">
      <button type="button" {{bindAttr disabled="noCustomer"}} class="btn btn-default">{{customer.fullname}} | {{currency customer.credit}}</button>
      <button type="button" {{action 'applyCustomerCredit'}} {{bindAttr disabled="noCustomer"}} class="btn btn-primary">Apply</button>
    </div>
  {{/if}}
  <button type="button" {{action 'clear' 'storeCredit'}} {{bindAttr disabled="noCustomer"}} class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Clear</button>
  <div class="form-group">
    {{currency-field name="store_credit" currency=payment.storeCredit disabled="noCustomer" step="0.01" min="0" class="form-control"}}
  </div>
{{/panel-group}}
<div class="well well-sm">
  <p class="clearfix">
    <span class="pull-left">Subtotal (After Store Credit):</span>
    <span class="pull-right">{{ currency subtotalAfterStoreCredit }}</span>
  </p>
  <p class="clearfix">
    <span class="pull-left">Tax:</span>
    <span class="pull-right">{{ currency tax}}</span>
  </p>
  <p class="clearfix no-bottom">
    <span class="pull-left">Total:</span>
    <span class="pull-right"><strong>{{ currency total }}</strong></span>
  </p>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Gift Certificate</h3>
  </div>
  <div class="panel-body form-inline">
    {{#if certificate}}
      <div class="btn-group">
        <button type="button" class="btn btn-default">{{certificate.sku}} | ${{currency certificate.balance}}</button>
        <button type="button" {{action 'applyGiftCard'}} class="btn btn-primary">Apply</button>
        <button type="button" {{action 'removeGiftCard'}} class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Remove</button>
      </div>
      <button type="button" {{action 'amountDue' 'giftCard'}} class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Amount Due</button>
      <button type="button" {{action 'clear' 'giftCard'}} class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Clear</button>
      <div class="form-group">
        {{currency-field name="gift_card" currency=payment.giftCard step="0.01" min="0" class="form-control"}}
      </div>
    {{else}}
      <div class="form-group">
        {{input value="certificateSKU" placeholder="Enter SKU..." class="form-control"}}
      </div>
      <button type="button" {{action 'search' 'giftCard'}} class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Search</button>
    {{/if}}
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Check</h3>
  </div>
  <div class="panel-body form-inline">
    <button type="button" {{action 'amountDue' 'check'}} class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Amount Due</button>
    <button type="button" {{action 'clear' 'check'}} class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Clear</button>
    <div class="form-group">
      {{currency-field name="check" currency=payment.check step="0.01" min="0" class="form-control"}}
    </div>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Credit Card</h3>
  </div>
  <div class="panel-body form-inline">
    <button type="button" {{action 'amountDue' 'credit'}} class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Amount Due</button>
    <button type="button" {{action 'clear' 'credit'}} class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Clear</button>
    <div class="form-group">
      {{currency-field name="credit" currency=payment.credit step="0.01" min="0" class="form-control"}}
    </div>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Cash</h3>
  </div>
  <div class="panel-body form-inline">
    <button type="button" {{action 'increment' '1'}} class="btn btn-primary">$0.01</button>
    <button type="button" {{action 'increment' '5'}} class="btn btn-primary">$0.05</button>
    <button type="button" {{action 'increment' '10'}} class="btn btn-primary">$0.10</button>
    <button type="button" {{action 'increment' '25'}} class="btn btn-primary">$0.25</button>
    <button type="button" {{action 'increment' '100'}} class="btn btn-primary">$1.00</button>
    <button type="button" {{action 'increment' '500'}} class="btn btn-primary">$5.00</button>
    <button type="button" {{action 'increment' '1000'}} class="btn btn-primary">$10.00</button>
    <button type="button" {{action 'increment' '2000'}} class="btn btn-primary">$20.00</button>
    <button type="button" {{action 'increment' '5000'}} class="btn btn-primary">$50.00</button>
    <button type="button" {{action 'increment' '10000'}} class="btn btn-primary">$100.00</button>
    <button type="button" {{action 'amountDue' 'cash'}} class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Amount Due</button>
    <button type="button" {{action 'clear' 'cash'}} class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Clear</button>
    <div class="form-group">
      {{currency-field name="cash" currency=payment.cash step="0.01" min="0" class="form-control"}}
    </div>
  </div>
</div>
<div class="clearfix well well-sm">
  <span class="pull-left">{{ dueLabel }}</span>
  <span class="pull-right"><strong>{{ currency due }}</strong></span>
</div>