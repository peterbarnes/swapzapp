{{#if certificate}}
  <div class="well">
    <div class="row">
      <div class="col-lg-10">
        <strong>{{ certificate.customer.fullname }}</strong>
        {{#if certificate.sku }}
          <br>
          <em>{{ certificate.sku }}</em>
        {{/if}}
        {{#if certificate.balance }}
          <br>
          {{ currency certificate.balance }}
        {{/if}}
      </div>
      <div class="col-lg-2">
        <ul class="actions">
          <li><a {{action 'removeCertificate' certificate}}><i class="fa fa-trash-o"></i></a></li>
        </ul>
      </div>
    </div>
  </div>
{{/if}}
{{#unless certificate}}
  <div class="well">
    {{input name="certificateQuery" value=certificateQuery placeholder="Search Gift Certificates..." class="form-control"}}
  </div>
  <div class="list-group no-bottom">
    {{#each certificate in certificates}}
      <a {{ action "selectCertificate" certificate}} {{bind-attr class=":list-group-item certificate._selected:active"}}>
        <div class="row">
          <div class="col-lg-12">
            <strong>{{ certificate.customer.fullname }}</strong>
            {{#if certificate.sku }}
              <br>
              <em>{{ certificate.sku }}</em>
            {{/if}}
            {{#if certificate.balance }}
              <br>
              {{ currency certificate.balance }}
            {{/if}}
          </div>
        </div>
      </a>
    {{/each}}
    <hr>
    <button {{action 'moreCertificates'}} {{bind-attr disabled="cantMoreCertificates"}} type="button" class="btn btn-flat">Load More...</button>
  </div>
{{/unless}}