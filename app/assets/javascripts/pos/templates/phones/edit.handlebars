{{#modal-dialog title="Edit Phone" confirm="Done" close="closeModal" accept="done"}}
  <div class="form-horizontal">
    <div class="form-group">
      <div class="col-lg-4">
        <label class="control-label" for="phone_name">Name</label>
      </div>
      <div class="col-lg-8">
        {{input id="phone_name" value=name class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4">
        <label class="control-label" for="phone_number">Number</label>
      </div>
      <div class="col-lg-8">
        {{view SwapzPOS.PhoneField phoneBinding="number" class="form-control"}}
      </div>
    </div>
  </div>
{{/modal-dialog}}