<div class="content-wrapper">
  {{view SwapzPOS.FlashView modelBinding="flash"}}
  <div class="row">
    <div class="col-md-8">
      <h4>
        <i class="fa fa-user"></i>
        &nbsp;
        User Profile
      </h4>
    </div>
    <div class="col-md-4">
      <div class="pull-right">
        <button class="btn btn-flat" {{action "save"}}>
          <i class="fa fa-save"></i>
          &nbsp;
          Save
        </button>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-6">
      <img {{bind-attr src="currentUser.gravatarUrl"}} alt="Gravatar" class="img-circle">
    </div>
    <div class="col-md-6">
      <div class="clearfix">
        <h3 class="pull-right">{{ currentUser.fullname }}</h3>
      </div>
      <div class="clearfix">
        <h6 class="pull-right">{{ currentUser.email }}</h6>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-12">
      <div class="form-horizontal">
        <fieldset id="user">
          <legend>User</legend>
          <div class="form-group">
            <div class="col-md-4">
              <label for="id" class="control-label">ID</label>
            </div>
            <div class="col-md-8">
              {{input type="text" id="id" class="form-control" valueBinding="currentUser.id" disabled="true"}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-4">
              <label for="first_name" class="control-label">First Name</label>
            </div>
            <div class="col-md-8">
              {{input type="text" id="first_name" class="form-control" valueBinding="currentUser.firstName"}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-4">
              <label for="last_name" class="control-label">Last Name</label>
            </div>
            <div class="col-md-8">
              {{input type="text" id="last_name" class="form-control" valueBinding="currentUser.lastName"}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-4">
              <label for="username" class="control-label">Username</label>
            </div>
            <div class="col-md-8">
              {{input type="text" id="username" class="form-control" valueBinding="currentUser.username"}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-4">
              <label for="email" class="control-label">E-Mail</label>
            </div>
            <div class="col-md-8">
              {{input type="email" id="email" class="form-control" valueBinding="currentUser.email"}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-4">
              <label for="pin" class="control-label">PIN</label>
            </div>
            <div class="col-md-8">
              {{input type="password" id="pin" class="form-control" valueBinding="currentUser.pin"}}
            </div>
          </div>
        </fieldset>
        <fieldset id="user">
          <legend>Password</legend>
          <div class="form-group">
            <div class="col-md-4">
              <label for="password" class="control-label">Password</label>
            </div>
            <div class="col-md-8">
              {{input type="password" id="password" class="form-control" valueBinding="currentUser.password"}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-4">
              <label for="password_confirmation" class="control-label">Password Confirmation</label>
            </div>
            <div class="col-md-8">
              {{input type="password" id="password_confirmation" class="form-control" valueBinding="currentUser.passwordConfirmation"}}
            </div>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>